{% extends 'home.html.twig' %}

{% block body %}
<section class="bg-light my-5 container">
    <div class="row text-center py-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Brand Manage</h1>
        </div>
    </div>
    <div className="page-heading pb-2 mt-4 mb-2 ">
        <div class="page-content">
            <div class="card">
                <div class="card-content">
                    <div class="card-body">
                        {{ form_start(form,{'attr':{'class':'form form-vertical'}} ) }}
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="first-name-vertical">Brand Name</label>
                                            {{ form_widget(form.brandname) }}
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end pt-2">
                                        {{ form_widget(form.save,{'attr':{'class':'btn btn-primary'}}) }}
                                    </div>
                                </div>
                            </div>
                            <a href="{{path('brand_manage')}}"><button type="button" style="margin: 20px 0; float: right;" class="btn btn-outline-primary">Back to brand manage</button></a>
                            <a href="{{path('product_manage')}}"><button type="button" style="margin: 20px 0; margin-right:10px; float: right;" class="btn btn-outline-primary">Products manage</button></a>
                        {{ form_end(form) }}
                    </div> <!--card body-->
                </div> <!--card content-->
            </div> <!--card-->
        </div><!--page content-->
    </div><!--page-heading-->
</section>

{% endblock %}
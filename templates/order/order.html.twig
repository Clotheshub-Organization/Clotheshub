{% extends 'home.html.twig' %}

{% block body %}
<section class="bg-light my-5 container">
        <div class="row text-center">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Order confirmation!</h1>
            </div>
        </div>
    <section class="order-container">
        <div class="row">
             <div class="col-12 col-md-6 p-3">
                <form id="orderform" name="orderform">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Order ID:</label>
                        <div class="col-sm-10">
                            <input type="text" value="order id" name="orderid" class="form-control" disabled>
                        </div>
                    </div>  
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Items:</label>
                        <div class="col-sm-10">
                            <input type="text" value="item name" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Price:</label>
                        <div class="col-sm-10">
                            <input type="text" value="price" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Quantity:</label>
                        <div class="col-sm-10">
                            <input type="text" value="quantity" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="col-12">
                        <div class="form-group">
                            <label for="image-vertical">Image:</label>
                        </div>
                    </div>
                    <div class="pt-3">
                            <img src="https://cdn2.iconfinder.com/data/icons/symbol-blue-set-3/100/Untitled-1-94-512.png"
                        class="w-25 shadow p-3 mb-5 bg-body rounded"/>
                    </div>
                </form>
            </div>
            <div class="col-12 col-md-6 p-3">
                <form id="orderform" name="orderform"> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Customer:</label>
                        <div class="col-sm-10">
                            <input type="text" value="username" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Customer address:</label>
                        <div class="col-sm-10">
                            <input type="text" value="address" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Customer phone number:</label>
                        <div class="col-sm-10">
                            <input type="text" value="phone number" name="orderid" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Date of Order:</label>
                        <div class="col-sm-10">
                            <input type="text" value="date" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Totalpayment:</label>
                        <div class="col-sm-10">
                            <input type="text" value="total" name="orderid" class="form-control" disabled>
                        </div>
                    </div> 
                </form>
            </div>
        </div>
    </section>
</section>
{% endblock %}

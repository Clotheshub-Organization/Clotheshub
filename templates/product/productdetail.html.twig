{% extends 'home.html.twig' %}

{% block body %}
<section class="bg-light my-5 container">
    <div class="row text-center py-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Product Detail</h1>
        </div>
    </div>
    <section class="product-container">
        <header>{{product.productname}}</header>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                {% if product.image %}
                    {% set img = product.image %}
                        <div class="white-box text-center"><img src="{{asset('img/'~img)}}"style = "width: 300px" class="img-responsive"></div>
                    {% else %}
                        <img src="https://ih1.redbubble.net/image.25042745.9608/flat,750x1000,075,f.jpg" alt="" class="mt-3 mb-3">
                {% endif %}
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">

                    <div class="row">
                        <div class="col-12">
                            <h5 class="box-title mt-3" style = "text-align:center">Product description</h4>
                            <p style="text-align: left" >{{product.productdes}}</p>
                        </div>
                        <div class="col-12" style="margin: 30px auto; width:30%; justify-content:center;">
                            <h4>${{product.productprice}}</h4>
                            {% if app.user %}
                            <form action="{{path('addCart',{'id':product.id})}}" methods="GET">
                                <input type="number" name="quantity" id="inputQuantity" value="1" min="1" max="99" class="form-control" required>
                                <div class="atc">
                                    <button type="submit" class="button" styles="width:120px;">Add to cart</button>
                                </div>
                            </form>
                            {% else %}
                             <form action="{{path('login')}}">
                                <input type="number" name="quantity" id="inputQuantity" value="1" min="1" max="99" class="form-control" required>
                                <div class="atc">
                                    <button type="submit" class="button" styles="width:120px;">Add to cart</button>
                                </div>
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}
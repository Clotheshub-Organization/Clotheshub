{% extends 'home.html.twig' %}

{% block body %}
    <section class="bg-light my-5 container">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Result for "{{search}}"</h1>
            </div>
        </div>
        <div class="row">
            {% for p in product %}
                <div class="col-12 col-md-4 p-5 mt-3">
                    <div class="card">
                        <div class="row">
                            <a href="{{path('product_detail',{'id':p.id})}}">
                            {% if p.image %}
                                {% set img = p.image %}
                                    <div class="white-box text-center"><img src="{{asset('img/'~img)}}" style="width:300px; height:365px; padding-top:16px;" class="img-responsive"></div>
                                {% else %}
                                    <div class="white-box text-center"><img src="https://ih1.redbubble.net/image.25042745.9608/flat,750x1000,075,f.jpg" alt="" style="width:300px; height:365px; padding-top:16px;" class="img-responsive"></div>
                            {% endif %}
                            </a>
                            <div class="card-body">
                                <ul class="list-unstyled d-flex justify-content-between">
                                    <li class="text-muted text-right">${{p.productprice}}</li>
                                </ul>
                                <a href="{{path('product_detail',{'id':p.id})}}" class="h2 text-decoration-none text-dark">{{p.productname}}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>         
{% endblock %}
